          </div>

          <div style="margin-top: 24px;">
            <div class="metric-label" style="margin-bottom: 16px;">Breakdown</div>
            <div class="category-list">
              <div class="category-item">
                <span class="category-name">Groceries</span>
                <span class="category-value" id="cat-groceries">$0</span>
              </div>
              <div class="category-item">
                <span class="category-name">Transport</span>
                <span class="category-value" id="cat-transport">$0</span>
              </div>
              <div class="category-item">
                <span class="category-name">Subscriptions</span>
                <span class="category-value" id="cat-subscriptions">$0</span>
              </div>
              <div class="category-item">
                <span class="category-name">Dining</span>
                <span class="category-value" id="cat-dining">$0</span>
              </div>
            </div>
          </div>

          <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid var(--border);">
            <div class="metric-row">
              <span class="metric-row-label">Avg. Daily Spend</span>
              <span class="metric-row-value" id="avgDailySpend">$0.00</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Savings Progress Card -->
      <div class="card">
        <div class="card-header">
          <div class="card-icon">üéØ</div>
          <div class="card-title">Savings Progress</div>
        </div>
        <div class="card-content">
          <div class="card-metric">
            <div class="metric-label">Monthly Savings Rate</div>
            <div class="metric-value text-positive">
              <span id="savingsRate">0.00%</span>
            </div>
          </div>

          <div style="margin-top: 24px;">
            <div class="metric-label">Target: $5,000</div>
            <div class="progress-bar">
              <div class="progress-fill" id="savingsProgress" style="width: 0%"></div>
