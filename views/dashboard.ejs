  <script>
    // Sample data (in production, this would come from your backend)
    const data = {
      netWorth: 145230.50,
      lastMonthNetWorth: 142100.00,
      monthlyChange: 3130.50,
      ytdChange: 12450.75,
      monthlySpend: 2850.00,
      currentSavings: 3200.00,
      lastMonthSavings: 2950.00,
      currentCash: 15500.00,
      portfolioValue: 120000.00,
      spending: {
        groceries: 450,
        transport: 380,
        subscriptions: 85,
        dining: 320
      },
      investments: {
        etfs: 72000,
        stocks: 35000,
        cash: 13000
      },
      monthlyTrend: [135000, 136200, 137100, 138500, 139200, 140100, 141500, 142100, 142800, 143500, 144200, 145230.50]
    };

    const currency = '¬£'; // Change to '‚Çπ' for India

    // Format currency
    function formatCurrency(value) {
      return currency + value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    // Update hero section
    document.getElementById('netWorthValue').textContent = formatCurrency(data.netWorth);

    const monthlyChangePercent = ((data.monthlyChange / data.lastMonthNetWorth) * 100).toFixed(2);
    document.getElementById('changePercent').textContent = (monthlyChangePercent >= 0 ? '+' : '') + monthlyChangePercent + '%';
    document.getElementById('ytdChange').textContent = '+' + ((data.ytdChange / (data.netWorth - data.ytdChange)) * 100).toFixed(2) + '%';
    document.getElementById('lastMonthValue').textContent = formatCurrency(data.lastMonthNetWorth);
    document.getElementById('currentCash').textContent = formatCurrency(data.currentCash);

    // Update spending card
    document.getElementById('monthlySpend').textContent = formatCurrency(data.monthlySpend);
    document.getElementById('cat-groceries').textContent = formatCurrency(data.spending.groceries);
    document.getElementById('cat-transport').textContent = formatCurrency(data.spending.transport);
    document.getElementById('cat-subscriptions').textContent = formatCurrency(data.spending.subscriptions);
    document.getElementById('cat-dining').textContent = formatCurrency(data.spending.dining);
    document.getElementById('avgDailySpend').textContent = formatCurrency(data.monthlySpend / 30);

    // Update savings card
    const savingsRate = (data.currentSavings / (data.currentCash + data.currentSavings)) * 100;
    document.getElementById('savingsRate').textContent = savingsRate.toFixed(1) + '%';
    document.getElementById('savingsProgress').style.width = Math.min((data.currentSavings / 5000) * 100, 100) + '%';
    document.getElementById('currentSavings').textContent = formatCurrency(data.currentSavings);
    document.getElementById('savingsRemaining').textContent = formatCurrency(Math.max(5000 - data.currentSavings, 0));
    document.getElementById('lastMonthSavings').textContent = formatCurrency(data.lastMonthSavings);

    // Update investments card
    document.getElementById('portfolioValue').textContent = formatCurrency(data.portfolioValue);
    const totalInvestments = data.investments.etfs + data.investments.stocks + data.investments.cash;
    document.getElementById('etf-alloc').textContent = ((data.investments.etfs / totalInvestments) * 100).toFixed(0) + '%';
    document.getElementById('stock-alloc').textContent = ((data.investments.stocks / totalInvestments) * 100).toFixed(0) + '%';
    document.getElementById('cash-alloc').textContent = ((data.investments.cash / totalInvestments) * 100).toFixed(0) + '%';
    document.getElementById('etf-fill').style.width = ((data.investments.etfs / totalInvestments) * 100) + '%';
    document.getElementById('stock-fill').style.width = ((data.investments.stocks / totalInvestments) * 100) + '%';
    document.getElementById('cash-fill').style.width = ((data.investments.cash / totalInvestments) * 100) + '%';

    // Trend chart
    const ctx = document.getElementById('trendChart').getContext('2d');
    new Chart(ctx, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        datasets: [{
          label: 'Net Worth',
          data: data.monthlyTrend,
          borderColor: '#22c55e',
          backgroundColor: 'rgba(34, 197, 94, 0.05)',
          borderWidth: 2,
          fill: true,
          tension: 0.4,
          pointRadius: 4,
          pointBackgroundColor: '#22c55e',
