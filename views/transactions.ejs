<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --bg-primary: #1a1a1a;
      --bg-secondary: #252525;
      --bg-tertiary: #2d2d2d;
      --accent: #22c55e;
      --text-primary: #ffffff;
      --text-secondary: #b0b0b0;
      --border: #3a3a3a;
    }

    body {
      background: var(--bg-primary);
      color: var(--text-primary);
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .header {
      background: rgba(37, 37, 37, 0.95);
      border-bottom: 1px solid var(--border);
      padding: 24px 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: sticky;
      top: 0;
      z-index: 100;
      backdrop-filter: blur(10px);
    }

    .header-left {
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .header-title {
      font-size: 24px;
      font-weight: 600;
      letter-spacing: -0.5px;
      color: var(--text-primary);
    }

    .header-subtitle {
      font-size: 12px;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .header-controls {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .header-nav {
      display: flex;
      gap: 8px;
      align-items: center;
      flex-wrap: wrap;
    }

    .menu-link {
      border: 1px solid var(--border);
      border-radius: 6px;
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 13px;
      padding: 8px 12px;
      transition: all 0.2s ease;
      background: var(--bg-tertiary);
    }

    .menu-link:hover {
      background: var(--bg-primary);
      color: var(--accent);
      border-color: var(--accent);
    }

    .menu-link.active {
      color: var(--accent);
      border-color: var(--accent);
      background: var(--bg-primary);
    }

    .icon-link {
      width: 40px;
      height: 40px;
      border-radius: 6px;
      border: 1px solid var(--border);
      background: var(--bg-tertiary);
      color: var(--text-secondary);
      text-decoration: none;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
      font-size: 18px;
    }

    .icon-link:hover {
      background: var(--bg-primary);
      color: var(--accent);
      border-color: var(--accent);
    }

    .country-selector {
      padding: 8px 16px;
      border-radius: 6px;
      border: 1px solid var(--border);
      background: var(--bg-tertiary);
      color: var(--text-primary);
      font-size: 13px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .country-selector:hover,
    .country-selector:focus {
      border-color: var(--accent);
      background: var(--bg-primary);
      outline: none;
    }

    .page-title {
      font-size: 32px;
      margin-bottom: 10px;
      margin-top: 40px;
    }

    .page-subtitle {
      color: var(--text-secondary);
      font-size: 14px;
      margin-bottom: 24px;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .filters-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
    }

    .filters-card h2 {
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-secondary);
      margin-bottom: 20px;
    }

    .filters-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin-bottom: 20px;
    }

    .filter-group {
      display: flex;
      flex-direction: column;
    }

    .filter-group label {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-secondary);
      margin-bottom: 8px;
    }

    .filter-group input,
    .filter-group select {
      padding: 10px 12px;
      background: var(--bg-primary);
      border: 1px solid var(--border);
      border-radius: 6px;
      color: var(--text-primary);
      font-size: 14px;
    }

    .filter-group input:focus,
    .filter-group select:focus {
      outline: none;
      border-color: var(--accent);
    }

    .filter-buttons {
      display: flex;
      gap: 12px;
    }

    .btn {
      padding: 10px 24px;
      border-radius: 6px;
      border: none;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn-primary {
      background: var(--accent);
      color: #000;
    }

    .btn-primary:hover {
      background: #16a34a;
      box-shadow: 0 8px 16px rgba(34, 197, 94, 0.2);
    }

    .btn-secondary {
      background: transparent;
      color: var(--text-secondary);
      border: 1px solid var(--border);
    }

    .btn-secondary:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .transactions-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border);
      border-radius: 12px;
      padding: 24px;
      margin-bottom: 24px;
      overflow-x: auto;
    }

    .transactions-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .transactions-header h2 {
      font-size: 14px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-secondary);
    }

    .transaction-count {
      font-size: 12px;
      color: var(--text-secondary);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 14px;
    }

    thead {
      background: var(--bg-tertiary);
      position: sticky;
      top: 0;
    }

    th {
      padding: 12px;
      text-align: left;
      font-weight: 600;
      color: var(--text-secondary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 12px;
      border-bottom: 1px solid var(--border);
    }

    td {
      padding: 12px;
      border-bottom: 1px solid var(--border);
    }

    tbody tr {
      transition: background 0.2s ease;
    }

    tbody tr:hover {
      background: var(--bg-tertiary);
    }

    .date {
      font-family: 'Courier New', monospace;
      color: var(--text-secondary);
    }

    .amount {
      font-family: 'Courier New', monospace;
      font-weight: 600;
      text-align: right;
    }

    .debit {
      color: #ef4444;
    }

    .credit {
      color: var(--accent);
    }

    .merchant {
      font-weight: 500;
    }

    .category {
      display: inline-block;
      padding: 4px 8px;
      background: var(--bg-tertiary);
      border-radius: 4px;
      font-size: 12px;
    }

    .bank {
      font-size: 12px;
      color: var(--text-secondary);
    }

    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: var(--text-secondary);
    }

    .empty-state p {
      margin-bottom: 16px;
    }

    .pagination {
      display: flex;
      justify-content: center;
      gap: 12px;
      margin-top: 24px;
      flex-wrap: wrap;
    }

    .pagination a,
    .pagination span {
      padding: 8px 12px;
      border-radius: 6px;
      border: 1px solid var(--border);
      color: var(--text-secondary);
      text-decoration: none;
      font-size: 14px;
      transition: all 0.2s ease;
    }

    .pagination a:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .pagination .current {
      background: var(--accent);
      color: #000;
      border-color: var(--accent);
    }

    .stats-row {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 16px;
      margin-bottom: 24px;
    }

    .stat-card {
      background: var(--bg-tertiary);
      padding: 16px;
      border-radius: 8px;
      border-left: 3px solid var(--accent);
    }

    .stat-card.positive {
      border-left-color: #22c55e;
    }

    .stat-card.negative {
      border-left-color: #ef4444;
    }

    .stat-label {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-secondary);
      margin-bottom: 8px;
    }

    .stat-value {
      font-size: 24px;
      font-weight: 600;
      font-family: 'Courier New', monospace;
      color: var(--accent);
    }

    .stat-value.positive {
      color: #22c55e;
    }

    .stat-value.negative {
      color: #ef4444;
    }

    /* Date Preset Buttons */
    .date-presets {
      margin-bottom: 20px;
    }

    .date-presets label {
      font-size: 12px;
      text-transform: uppercase;
      letter-spacing: 1px;
      color: var(--text-secondary);
      display: block;
      margin-bottom: 12px;
    }

    .preset-buttons {
      display: flex;
      gap: 8px;
      flex-wrap: wrap;
    }

    .preset-btn {
      padding: 8px 16px;
      border: 1px solid var(--border);
      border-radius: 6px;
      background: transparent;
      color: var(--text-secondary);
      font-size: 13px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .preset-btn:hover {
      border-color: var(--accent);
      color: var(--accent);
    }

    .preset-btn.active {
      background: var(--accent);
      color: #000;
      border-color: var(--accent);
    }

    /* Custom Date Inputs */
    .custom-date-inputs {
      display: none;
      gap: 16px;
      margin-top: 12px;
    }

    .custom-date-inputs.visible {
      display: flex;
    }

    .custom-date-inputs .filter-group {
      flex: 1;
    }

    @media (max-width: 768px) {
      .filters-grid {
        grid-template-columns: 1fr;
      }

      .filter-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
      }

      .preset-buttons {
        flex-direction: column;
      }

      .preset-btn {
        width: 100%;
        text-align: center;
      }

      .custom-date-inputs {
        flex-direction: column;
      }

      .custom-date-inputs.visible {
        display: flex;
      }

      table {
        font-size: 12px;
      }

      th, td {
        padding: 8px;
      }

      .transactions-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <div class="header-left">
      <div>
        <div class="header-title">üí∞ Mission Control</div>
        <div class="header-subtitle">Transactions</div>
      </div>
    </div>
    <div class="header-controls">
      <select class="country-selector" id="countrySelector">
        <option value="UK">üá¨üáß United Kingdom (GBP)</option>
        <option value="IN">üáÆüá≥ India (INR)</option>
      </select>
      <div class="header-nav">
        <a href="/dashboard" class="menu-link <%= pageKey === 'dashboard' ? 'active' : '' %>">Dashboard</a>
        <a href="/dashboard/transactions" class="menu-link <%= pageKey === 'transactions' ? 'active' : '' %>">Transactions</a>
        <a href="/analytics" class="menu-link">Analytics</a>
        <a href="/agent" class="menu-link">Agent</a>
        <a href="/investments" class="menu-link">Investments</a>
        <a href="/goals" class="menu-link">Goals</a>
      </div>
      <a href="/ops" class="icon-link" title="Ops">‚öôÔ∏è</a>
      <a href="/logout" class="menu-link">Logout</a>
    </div>
  </div>

  <div class="container">
    <h1 class="page-title">üìä All Transactions</h1>
    <p class="page-subtitle">View and filter your transaction history</p>
    <!-- Filters -->
    <div class="filters-card">
      <h2>Filters</h2>
      <form id="filterForm" method="GET" action="/dashboard/transactions">
        <!-- Hidden input for datePreset -->
        <input type="hidden" id="datePresetInput" name="datePreset" value="<%= datePreset %>">

        <!-- Date Preset Buttons -->
        <div class="date-presets">
          <label>Date Range</label>
          <div class="preset-buttons">
            <button type="button" class="preset-btn" data-preset="last7days" <%= datePreset === 'last7days' ? 'aria-pressed="true"' : '' %>>Last 7 Days</button>
            <button type="button" class="preset-btn" data-preset="last30days" <%= datePreset === 'last30days' ? 'aria-pressed="true"' : '' %>>Last 30 Days</button>
            <button type="button" class="preset-btn" data-preset="thisMonth" <%= datePreset === 'thisMonth' ? 'aria-pressed="true"' : '' %>>This Month</button>
            <button type="button" class="preset-btn" data-preset="lastMonth" <%= datePreset === 'lastMonth' ? 'aria-pressed="true"' : '' %>>Last Month</button>
            <button type="button" class="preset-btn" data-preset="lastQuarter" <%= datePreset === 'lastQuarter' ? 'aria-pressed="true"' : '' %>>Last Quarter</button>
            <button type="button" class="preset-btn" data-preset="thisYear" <%= datePreset === 'thisYear' ? 'aria-pressed="true"' : '' %>>This Year</button>
            <button type="button" class="preset-btn" data-preset="lastYear" <%= datePreset === 'lastYear' ? 'aria-pressed="true"' : '' %>>Last Year</button>
            <button type="button" class="preset-btn" data-preset="custom" <%= datePreset === 'custom' ? 'aria-pressed="true"' : '' %>>Custom</button>
          </div>
        </div>

        <!-- Custom Date Inputs -->
        <div class="custom-date-inputs" id="customDateInputs" <%= datePreset === 'custom' ? 'class="custom-date-inputs visible"' : 'class="custom-date-inputs"' %>>
          <div class="filter-group">
            <label for="customFromDate">From Date</label>
            <input type="date" id="customFromDate" name="fromDate" value="<%= finalFromDate %>">
          </div>
          <div class="filter-group">
            <label for="customToDate">To Date</label>
            <input type="date" id="customToDate" name="toDate" value="<%= finalToDate %>">
          </div>
        </div>

        <!-- Other Filters Grid -->
        <div class="filters-grid">
          <div class="filter-group">
            <label for="transactionType">Transaction Type</label>
            <select id="transactionType" name="transactionType">
              <option value="all" <%= transactionType === 'all' ? 'selected' : '' %>>All Transactions</option>
              <option value="debit" <%= transactionType === 'debit' ? 'selected' : '' %>>Debits Only</option>
              <option value="credit" <%= transactionType === 'credit' ? 'selected' : '' %>>Credits Only</option>
            </select>
          </div>

          <div class="filter-group">
            <label for="category">Category</label>
            <select id="category" name="category">
              <option value="all">All Categories</option>
              <% categories.forEach(cat => { %>
              <option value="<%= cat %>" <%= currentCategory === cat ? 'selected' : '' %>>
                <%= cat %>
              </option>
              <% }); %>
            </select>
          </div>

          <div class="filter-group">
            <label for="minAmount">Min Amount</label>
            <input type="number" id="minAmount" name="minAmount" step="0.01" placeholder="0.00" value="<%= minAmount %>">
          </div>

          <div class="filter-group">
            <label for="maxAmount">Max Amount</label>
            <input type="number" id="maxAmount" name="maxAmount" step="0.01" placeholder="999999.99" value="<%= maxAmount %>">
          </div>
        </div>

        <div class="filter-buttons">
          <button type="submit" class="btn btn-primary">Apply Filters</button>
          <a href="/dashboard/transactions" class="btn btn-secondary">Clear Filters</a>
        </div>
      </form>
    </div>

    <!-- Stats -->
    <% if (transactions.length > 0) { %>
    <div class="stats-row">
      <div class="stat-card">
        <div class="stat-label">Total Transactions</div>
        <div class="stat-value"><%= totalCount %></div>
      </div>
      <div class="stat-card">
        <div class="stat-label">Showing</div>
        <div class="stat-value"><%= transactions.length %></div>
      </div>
      <div class="stat-card <%= netPL >= 0 ? 'positive' : 'negative' %>">
        <div class="stat-label">Net P&L</div>
        <div class="stat-value <%= netPL >= 0 ? 'positive' : 'negative' %>"><%= netPL >= 0 ? '+' : '' %><%= netPL.toFixed(2) %></div>
      </div>
    </div>
    <% } %>

    <!-- Transactions Table -->
    <div class="transactions-card">
      <div class="transactions-header">
        <h2>Transaction History</h2>
        <span class="transaction-count">
          Showing <%= (page - 1) * 50 + 1 %>‚Äì<%= Math.min(page * 50, totalCount) %> of <%= totalCount %>
        </span>
      </div>

      <% if (transactions.length === 0) { %>
      <div class="empty-state">
        <p>No transactions found matching your filters.</p>
        <a href="/dashboard/transactions" class="btn btn-secondary">Clear Filters</a>
      </div>
      <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Merchant</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Bank</th>
            <th>Type</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(tx => { %>
          <tr>
            <td class="date"><%= new Date(tx.transaction_date).toLocaleDateString() %></td>
            <td class="merchant"><%= tx.merchant %></td>
            <td class="amount <%= tx.transaction_type === 'debit' ? 'debit' : 'credit' %>">
              <%= tx.transaction_type === 'debit' ? '-' : '+' %> <%= Math.abs(tx.amount).toFixed(2) %> <%= tx.currency %>
            </td>
            <td>
              <% if (tx.category) { %>
              <span class="category"><%= tx.category %></span>
              <% } else { %>
              <span class="category" style="opacity: 0.5;">Uncategorized</span>
              <% } %>
            </td>
            <td class="bank"><%= tx.bank_name %></td>
            <td style="text-transform: capitalize;"><%= tx.transaction_type %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } %>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <div class="pagination">
        <% if (page > 1) { %>
        <a href="/dashboard/transactions?page=1<%= currentCategory !== 'all' ? '&category=' + currentCategory : '' %><%= fromDate ? '&fromDate=' + fromDate : '' %><%= toDate ? '&toDate=' + toDate : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>">
          First
        </a>
        <a href="/dashboard/transactions?page=<%= page - 1 %><%= currentCategory !== 'all' ? '&category=' + currentCategory : '' %><%= fromDate ? '&fromDate=' + fromDate : '' %><%= toDate ? '&toDate=' + toDate : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>">
          Previous
        </a>
        <% } %>

        <% for (let i = Math.max(1, page - 2); i <= Math.min(totalPages, page + 2); i++) { %>
        <% if (i === page) { %>
        <span class="current"><%= i %></span>
        <% } else { %>
        <a href="/dashboard/transactions?page=<%= i %><%= currentCategory !== 'all' ? '&category=' + currentCategory : '' %><%= fromDate ? '&fromDate=' + fromDate : '' %><%= toDate ? '&toDate=' + toDate : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>">
          <%= i %>
        </a>
        <% } %>
        <% } %>

        <% if (page < totalPages) { %>
        <a href="/dashboard/transactions?page=<%= page + 1 %><%= currentCategory !== 'all' ? '&category=' + currentCategory : '' %><%= fromDate ? '&fromDate=' + fromDate : '' %><%= toDate ? '&toDate=' + toDate : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>">
          Next
        </a>
        <a href="/dashboard/transactions?page=<%= totalPages %><%= currentCategory !== 'all' ? '&category=' + currentCategory : '' %><%= fromDate ? '&fromDate=' + fromDate : '' %><%= toDate ? '&toDate=' + toDate : '' %><%= minAmount ? '&minAmount=' + minAmount : '' %><%= maxAmount ? '&maxAmount=' + maxAmount : '' %>">
          Last
        </a>
        <% } %>
      </div>
      <% } %>
    </div>
  </div>

  <script>
    // Country selector
    document.getElementById('countrySelector').addEventListener('change', function(e) {
      // In production, this would reload transactions with new currency
      console.log('Selected country:', e.target.value);
    });

    // Date preset button handling
    const presetButtons = document.querySelectorAll('.preset-btn');
    const datePresetInput = document.getElementById('datePresetInput');
    const customDateInputs = document.getElementById('customDateInputs');
    const filterForm = document.getElementById('filterForm');

    function updateActiveState() {
      const currentPreset = datePresetInput.value;
      presetButtons.forEach(btn => {
        if (btn.dataset.preset === currentPreset) {
          btn.classList.add('active');
          btn.setAttribute('aria-pressed', 'true');
        } else {
          btn.classList.remove('active');
          btn.setAttribute('aria-pressed', 'false');
        }
      });
    }

    function showHideCustomInputs() {
      if (datePresetInput.value === 'custom') {
        customDateInputs.classList.add('visible');
      } else {
        customDateInputs.classList.remove('visible');
      }
    }

    // Initialize active state on page load
    updateActiveState();
    showHideCustomInputs();

    // Preset button click handlers
    presetButtons.forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        datePresetInput.value = btn.dataset.preset;
        updateActiveState();
        showHideCustomInputs();
      });
    });

    // Handle form submission to include the datePreset value
    filterForm.addEventListener('submit', function(e) {
      // The hidden datePreset input will automatically be included in the form submission
    });
  </script>
</body>
</html>
